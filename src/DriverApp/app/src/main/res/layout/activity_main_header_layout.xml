<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_get_all_task"
        style="@style/MenuImage"
        app:layout_constraintEnd_toStartOf="@+id/badge_notification_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/refresh_selector" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/connectivity"
        style="@style/MenuImage"
        android:clickable="false"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/main_popup_menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/badge_process_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_signal" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_popup_menu"
        style="@style/MenuImage"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_drop"
        android:tint="@color/clrIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/connectivity"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/badge_process_icon"
        style="@style/MenuImage"
        android:clickable="false"
        app:layout_constraintEnd_toStartOf="@+id/connectivity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/badge_notification_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/publish_selector" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/badge_notification_icon"
        style="@style/MenuImage"
        android:clickable="false"
        app:layout_constraintEnd_toStartOf="@+id/badge_process_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_get_all_task"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ring_selector" />

    <com.abona_erp.driver.app.ui.widget.AsapTextView
        android:id="@+id/badge_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_item_count"
        android:textColor="@color/clrWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/badge_notification_icon"
        app:layout_constraintTop_toTopOf="@+id/badge_notification_icon" />

    <com.abona_erp.driver.app.ui.widget.AsapTextView
        android:id="@+id/badge_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_item_count"
        android:textColor="@color/clrWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/badge_process_icon"
        app:layout_constraintTop_toTopOf="@+id/badge_process_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>