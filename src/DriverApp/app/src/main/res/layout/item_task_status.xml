<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin_std"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#D3D3D3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="@dimen/icon_size_Xbg"
            android:layout_height="@dimen/icon_size_Xbg"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_last_activity_icon"
            android:layout_width="@dimen/icon_size_X"
            android:layout_height="@dimen/icon_size_X"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:src="@drawable/abona_36x36" />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_last_activity_status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/status_pending_bg"
            android:textColor="#fff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_last_activity_order_no"
            app:layout_constraintTop_toBottomOf="@+id/tv_last_activity_action_type"
            tools:text="UPDATED" />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_last_activity_action_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/tv_last_activity_order_no"
            app:layout_constraintTop_toBottomOf="@+id/item_divider"
            tools:background="@drawable/bg_action_type_pick_up"
            tools:text="@string/label_new" />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_last_activity_order_no"
            style="@style/TaskStatusText"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            tools:text="2020/15/13" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sub_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin_std"
        app:layout_constraintEnd_toEndOf="@+id/header_content"
        app:layout_constraintStart_toStartOf="@+id/header_content"
        app:layout_constraintTop_toBottomOf="@id/header_content">


        <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_last_activity_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/clrFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_last_activity_timestamp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="DAIMLER AG" />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_last_activity_timestamp"
            style="@style/TaskStatusText"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_last_activity_customer"
            tools:text="Do., 19 Dez. 2019 14:02:40" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_last_activity_done_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:src="@drawable/ic_done_all"
            android:tint="@color/grey_40"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tv_last_activity_timestamp"
            app:layout_constraintEnd_toEndOf="@+id/tv_last_activity_timestamp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
