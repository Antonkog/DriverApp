<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tasks_fragment_dest">

    <fragment
        android:id="@+id/task_detail_fragment_dest"
        tools:layout="@layout/activity_detail_layout"
        android:name="com.redhotapp.driverapp.taskdetail.TaskDetailFragment"
        android:label="Task Details">
        <argument
            android:name="taskId"
            app:argType="string" />
        <action
            android:id="@+id/action_task_detail_fragment_dest_to_documentFragment"
            app:destination="@id/documentFragment" />
        <action
            android:id="@+id/action_task_detail_fragment_dest_to_photoFragment"
            app:destination="@id/photoFragment" />
        <action
            android:id="@+id/action_task_detail_fragment_dest_to_softwareFragment"
            app:destination="@id/softwareFragment" />
        <action
            android:id="@+id/action_task_detail_fragment_dest_to_tasks_fragment_dest"
            app:destination="@id/tasks_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/tasks_fragment_dest"
        tools:layout="@layout/activity_main_new"
        android:name="com.redhotapp.driverapp.tasks.TasksFragment"
        android:label="@string/app_name">
        <argument
            android:name="userMessage"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_tasks_fragment_dest_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_tasks_fragment_dest_to_lastActivityFragment"
            app:destination="@id/lastActivityFragment" />
        <action
            android:id="@+id/action_tasks_fragment_dest_to_task_detail_fragment_dest"
            app:destination="@id/task_detail_fragment_dest" />
    </fragment>
    <argument
        android:name="userMessage"
        android:defaultValue="0" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.redhotapp.driverapp.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_tasks_fragment_dest"
            app:destination="@id/tasks_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/lastActivityFragment"
        android:name="com.redhotapp.driverapp.lastActivity.LastActivityFragment"
        android:label="last_activity_fragment"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/documentFragment"
        android:name="com.redhotapp.driverapp.document.DocumentFragment"
        android:label="document_fragment"
        tools:layout="@layout/activity_document_layout" />
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.redhotapp.driverapp.photo.PhotoFragment"
        android:label="photo_fragment"
        tools:layout="@layout/activity_photo_layout" />
    <fragment
        android:id="@+id/softwareFragment"
        android:name="com.redhotapp.driverapp.about.SoftwareFragment"
        android:label="software_fragment"
        tools:layout="@layout/activity_software_info_layout" />
</navigation>
