<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/ll_root_item"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/iv_number_type"
    android:layout_width="@dimen/icon_size_24"
    android:layout_height="@dimen/icon_size_24"
    android:padding="5dp"
    app:tint="@color/clrFont"
    tools:src="@drawable/ic_phone_24px"
    />

  <Space
    android:layout_width="5dp"
    android:layout_height="0dp"
    />

  <TextView
    android:id="@+id/tv_contact_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:textSize="14sp"
    android:textColor="@color/clrFont"
    tools:text="verfolger"
    />

  <Space
    android:layout_width="5dp"
    android:layout_height="0dp"
    />

  <TextView
    android:id="@+id/tv_contact_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:textSize="14sp"
    android:textColor="@color/clrFont"
    tools:text="Murat KÃ¶s"
    />

  <Space
    android:layout_width="5dp"
    android:layout_height="0dp"
    />

  <TextView
    android:id="@+id/tv_contact_number"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:textSize="14sp"
    android:textColor="@color/clrFont"
    tools:text="m.koes@abona-erp.com"
    />

</LinearLayout>