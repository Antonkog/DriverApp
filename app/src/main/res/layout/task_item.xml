<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/main_menu_background"
  android:layout_margin="@dimen/spacing_medium"
  android:minHeight="80dp">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/ll_header_background"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/spacing_medium"
      android:background="@color/clrListViewHeader">

      <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_warning_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_xsmall"
        android:src="@drawable/ic_danger"
        android:tint="@color/clrWarningLight"
        android:visibility="gone"
        />

      <View
        android:layout_width="@dimen/spacing_large"
        android:layout_height="0dp"
        />

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="@string/task_finish"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_task_finish"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/clrFont"
          tools:text="29.10.2019 10:33:33"
          />

      </LinearLayout>

      <View
        android:layout_width="@dimen/spacing_xxxlarge"
        android:layout_height="0dp"
        />

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="@string/due_in"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_due_in"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/clrFont"
          tools:text="1d 20h 30min"
          />

      </LinearLayout>

      <View
        android:layout_width="@dimen/spacing_xxxlarge"
        android:layout_height="0dp"
        />

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="@string/order_no"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_order_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/clrFont"
          android:textStyle="bold"
          android:textSize="14sp"
          tools:text="2019/41/370"
          />

      </LinearLayout>

      <View
        android:layout_width="@dimen/spacing_xxxlarge"
        android:layout_height="0dp"
        />

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:text="@string/task_id"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_task_id"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/clrFont"
          tools:text="21"
          />

      </LinearLayout>

    </LinearLayout>

    <RelativeLayout
      android:id="@+id/task_item_bg_action_type"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:background="@color/clrUnknown">

      <com.abona_erp.driver.app.ui.widget.AsapTextView
        android:id="@+id/task_item_action_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_small"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/clrWhite"
        tools:text="- 1 -- LADESTELLE"
        />

      <LinearLayout
        android:id="@+id/swap_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/task_item_action_type"
        android:visibility="gone"
        tools:visibility="visible">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_my_phone_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/white"
          android:minWidth="120dp"
          tools:text="(0152 453223233)"
          />

        <Space
          android:layout_width="@dimen/spacing_large"
          android:layout_height="0dp"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_my_vehicle_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/white"
          tools:text="WGM-63012"
          />

        <Space
          android:layout_width="@dimen/spacing_large"
          android:layout_height="0dp"
          />

        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_swap"
          />

        <Space
          android:layout_width="@dimen/spacing_large"
          android:layout_height="0dp"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_swap_vehicle_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/white"
          tools:text="WGM-63012"
          />

        <Space
          android:layout_width="@dimen/spacing_large"
          android:layout_height="0dp"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:id="@+id/tv_swap_phone_no"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/white"
          android:minWidth="120dp"
          tools:text="(0152 453223233)"
          />

      </LinearLayout>

    </RelativeLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="3">

      <!-- 1/3 -->
      <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_weight="1">

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/spacing_medium"
          android:textColor="@color/grey_40"
          android:textSize="12sp"
          android:text="@string/activity_status"
          />

        <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_percent_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_large"
            android:textColor="@color/clrFont"
            />

          <com.abona_erp.driver.app.ui.widget.AsapTextView
            android:id="@+id/tv_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_large"
            android:textColor="@color/clrFont"
            />

        </LinearLayout>

        <ProgressBar
          android:id="@+id/pb_activity_step"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          style="?android:attr/progressBarStyleHorizontal"
          android:max="100"
          android:progress="10"
          android:layout_marginEnd="@dimen/spacing_large"
          />

        <View
          android:layout_width="0dp"
          android:layout_height="@dimen/spacing_small"
          />

        <com.abona_erp.driver.app.ui.widget.AsapTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/grey_40"
          android:textSize="12sp"
          android:text="@string/task_total_status"
          />

        <LinearLayout
