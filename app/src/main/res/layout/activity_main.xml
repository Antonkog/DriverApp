            android:drawablePadding="10dp"
            android:focusable="false"
            android:maxLines="1"
            android:maxLength="80"
            android:hint="Search"
            android:drawableTint="#1F1C2C"
            />

        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>

      <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_notifications_outline"
        android:tint="#1F1C2C"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

      <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        />

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/profile_mk"
        android:layout_gravity="center_vertical"
        app:civ_border_width="2dp"
        app:civ_border_color="#1F1C2C"
        />

      <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_arrow_drop"
        android:tint="#1F1C2C"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

      <View
        android:layout_width="12dp"
        android:layout_height="match_parent"
        />

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#1F1C2C"
      />

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tab_layout_background"
        app:tabMode="scrollable"
        app:tabBackground="@drawable/tab_layout_selector"
        app:tabSelectedTextColor="#fff"
        app:tabPaddingStart="16dp"
        app:tabPaddingEnd="16dp"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/TabTextAppearance"
        />

      <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

      <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:tint="@color/colorPrimaryDark"
        android:src="@drawable/ic_filter_outline"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
      android:id="@+id/view_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      />

  </LinearLayout>

</LinearLayout>