    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_get_all_task"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_autorenew_24px"
            android:tint="@color/clrIcon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/notification_rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/badge_notification_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_notifications_outline"
                android:clickable="false"
                android:focusable="false"
                android:tint="@color/clrIcon" />

        </RelativeLayout>

        <TextView
            android:id="@+id/badge_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/notification_rel_layout"
            android:layout_alignEnd="@id/notification_rel_layout"
            android:background="@drawable/badge_item_count"
            android:textColor="@color/clrWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/process_rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/badge_process_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_publish_24px"
                android:clickable="false"
                android:focusable="false"
                android:tint="@color/clrIcon" />

        </RelativeLayout>

        <TextView
            android:id="@+id/badge_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/process_rel_layout"
            android:layout_alignEnd="@id/process_rel_layout"
            android:background="@drawable/badge_item_count"
            android:textColor="@color/clrWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/connectivity"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_signal"
            android:clickable="false"
            android:focusable="false"
            android:tint="@color/clrIcon" />

    </RelativeLayout>

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/grey_60"
        android:text="1."
        android:visibility="gone"
        tools:visibility="visible" />
    <!--
      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/icon_size_48"
        android:layout_height="@dimen/icon_size_48"
        app:srcCompat="@drawable/profile_mk"
        android:layout_gravity="center_vertical"
        app:civ_border_width="@dimen/spacing_xsmall"
        app:civ_border_color="@color/clrIcon"
        />
        below was circleview with
         app:civ_border_width="@dimen/spacing_xsmall"
        app:civ_border_color="@color/grey_60"
    -->
    <ImageView
        android:id="@+id/profile1"
        android:layout_width="@dimen/icon_size_48"
        android:layout_height="@dimen/icon_size_48"
        app:srcCompat="@drawable/user"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:layout_width="@dimen/spacing_middle"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/grey_60"
        android:text="2."
        android:visibility="gone"
        tools:visibility="visible" />


    <!--  app:civ_border_width="@dimen/spacing_xsmall"-->
    <!--  app:civ_border_color="@color/grey_60"-->
    <ImageView
        android:id="@+id/profile2"
        android:layout_width="@dimen/icon_size_48"
        android:layout_height="@dimen/icon_size_48"
        app:srcCompat="@drawable/user"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/main_popup_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_arrow_drop"
        android:tint="@color/clrIcon"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <View
        android:layout_width="@dimen/spacing_large"
        android:layout_height="match_parent" />

</LinearLayout>