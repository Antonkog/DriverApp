<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <!-- BACK BUTTON -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_protocol_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:padding="@dimen/spacing_large"
            android:backgroundTint="@color/clrAbona"
            app:srcCompat="@drawable/ic_arrow_back"
            android:tint="@color/clrWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btn_protocol_back"
            android:text="@string/menu_protocol"
            android:textSize="28sp"
            android:textColor="@color/grey_80"
            android:layout_toRightOf="@id/btn_protocol_back" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_protocol_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:padding="@dimen/spacing_large"
            app:srcCompat="@drawable/ic_reset"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="@dimen/spacing_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_log_view"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/spacing_medium" />

</LinearLayout>